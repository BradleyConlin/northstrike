repos:
  - repo: https://github.com/psf/black
    rev: 24.4.2
    hooks: [{id: black}]
  - repo: https://github.com/pycqa/isort
    rev: 5.13.2
    hooks: [{id: isort}]
  - repo: https://github.com/pycqa/flake8
    rev: 7.0.0
    hooks: [{id: flake8}]
  - repo: https://github.com/Yelp/detect-secrets
    rev: v1.4.0
    hooks: [{id: detect-secrets}]


# ---- Label QA hook (skips if no dataset present) ----
- repo: local
  hooks:
    - id: label-qa
      name: Dataset QA (YOLO)
      entry: bash scripts/labeling/precommit_label_qa.sh
      language: system
      pass_filenames: false
      stages: [commit]
